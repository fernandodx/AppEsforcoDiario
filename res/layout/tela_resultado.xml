<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/corFundoApp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txTituloResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Atividade Concluída"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/corLetraButton"
            android:typeface="serif"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
		android:layout_marginBottom="2dp" >

        <TextView
            android:id="@+id/txDsEsforcoOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="Esforço:" 
            android:textColor="@color/corLetraButton"
            android:typeface="serif"  />

        <TextView
            android:id="@+id/txDsEsforco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" 
            android:textColor="@color/corLetraButton"
            android:typeface="serif"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
	    android:layout_marginBottom="2dp" >

        <TextView
            android:id="@+id/txAtividadeOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="Atividade:"
            android:textColor="@color/corLetraButton"
            android:typeface="serif"   />

        <TextView
            android:id="@+id/txDsAtividade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/corLetraButton"
            android:typeface="serif"  />

    </LinearLayout>

     <LinearLayout
        android:id="@+id/areaSalvarTempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
            <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="2dp" >
		
		        <TextView
		            android:id="@+id/txDtInicioOS"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="4dp"
		            android:text="Inicio:"
		            android:textColor="@color/corLetraButton"
                    android:typeface="serif"  />
		
		        <TextView
		            android:id="@+id/txDtInicio"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="TextView" 
		            android:textColor="@color/corLetraButton"
                    android:typeface="serif" />
		        
		    </LinearLayout>
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="2dp">
		
		        <TextView
		            android:id="@+id/txDtFimOS"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="4dp"
		            android:text="Fim:"
		            android:textColor="@color/corLetraButton"
                    android:typeface="serif"  />

		        <TextView
		            android:id="@+id/txDtFim"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="TextView"
		            android:textColor="@color/corLetraButton"
                    android:typeface="serif"  />
		
		    </LinearLayout>
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" 
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="2dp">
		
		        <TextView
		            android:id="@+id/txTempoGastoOS"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="4dp"
		            android:text="Tempo Gasto:"
		            android:textColor="@color/corLetraButton"
                    android:typeface="serif"  />
		
		        <TextView
		            android:id="@+id/txTempoGasto"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="TextView" 
		            android:textColor="@color/corLetraButton"
                    android:typeface="serif" />
		
		    </LinearLayout>
        
    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="5dp"
         android:orientation="vertical" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp" >

             <TextView
                 android:id="@+id/textView9"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@color/corDestaque"
                 android:gravity="center"
                 android:text="Hoje"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:textColor="@color/corLetraButton"
                 android:typeface="serif" />

         </LinearLayout>

         <ListView
             android:id="@+id/listaAtividadesAgora"
             android:layout_width="match_parent"
             android:layout_height="202dp"
             android:layout_weight="1.05" >
         </ListView>

         <Button
             android:id="@+id/btEnviarEsforco"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:background="@color/backgroudButton"
             android:text="Enviar Esforço"
             android:textColor="@color/corLetraButton" 
             android:typeface="serif"/>

     </LinearLayout>
    
</LinearLayout>
